<h2>注文履歴一覧</h2>

<table>
    <thead>
        <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
        </tr>
    </thead>
    <%@orders.each do |order| %>
    <tbody>
        <tr>
            <td><%=link_to order.created_at,admin_order_path(order.id)%></td>
            <td><%=order.customer.last_name%></td> <%#customer使うにはbelongの記述必要#%>
            <td><%=order.order_details.sum(:amount)%></td>
            <td><%=order.order_status%></td>
        </tr>
    </tbody>
    <%end%>
</table>