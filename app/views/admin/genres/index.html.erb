
<div class="container">
  <h3>ジャンル一覧　ジャンル追加</h3>
  
  <%=form_with model: @genre,url: admin_genres_path do |f| %>
  
   <table>
     <tr><th>ジャンル名</th><td><%=f.text_field:name%></td><td><%=f.submit'新規登録',class:"btn btn-sm btn-success"%></td></tr>
   </table>
  <%end%>
  
    <table class="table col-md-3">
      <thead>
        <tr>
          <th acope=>ジャンル</th>
        </tr>
      </thead>
    <%@genres.each do |genre|%>
      <tbody>
        <tr>
          <td scope="row"><%=genre.name%></td>
          <td><%=link_to"編集する",edit_admin_genre_path(genre.id),class:"btn btn-sm btn-success"%></td>
        </tr>
      </tbody>
    <%end%>
  </table>

</div>
 