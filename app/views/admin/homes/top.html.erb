
<div class="container">
    <h2>注文履歴一覧</h2>
    <div class="row justify-content-md-center">
        <div class="col-md-10">      
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">購入日時</th>
                        <th scope="col">購入者</th>
                        <th scope="col">注文個数</th>
                        <th scope="col">注文ステータス</th>
                    </tr>
                </thead>
                <%@orders.each do |order| %>
                <tbody>
                    <tr>
                        <td scope="row"><%=link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S') ,admin_order_path(order.id)%></td>
                        <td><%=order.customer.last_name + order.customer.first_name%></td> <%#customer使うにはbelongの記述必要#%>
                        <td><%=order.order_details.sum(:amount)%></td>
                        <td><%=order.order_status_i18n%></td>
                    </tr>
                </tbody>
                <%end%>
            </table>
        </div>
    </div>
</div>