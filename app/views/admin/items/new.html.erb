
<div class="container">
    <h2>商品新規登録</h2>
    <div class="row justify-content-md-center">
        <div class="col-md-6">    
            <%=form_with model: @item,url: admin_items_path do |f| %>
            
            <table>
                <tr><th>商品画像</th><td><%=f.file_field :image,accept:"image/*"%></td></tr>
                <tr><th>商品名</th><td><%=f.text_field:name,placeholder:"商品名"%></td></tr>
                <tr><th>商品説明</th><td><%=f.text_area:introduction,placeholder:"ここに説明文を記述します"%></td></tr>
                <tr><th>ジャンル</th><td><%=f.collection_select:genre_id,Genre.all,:id,:name%></td></tr>
                <tr><th>税抜価格</th><td><%=f.text_field:price,placeholder:"1000"%>円</td></tr>
                <tr><th>販売ステータス</th><td><%=f.radio_button:is_active,true%>販売中<%=f.radio_button:is_active,false%>販売停止中</td></tr>
                <tr><th></th><td><%=f.submit'新規登録'%></td></tr>
             </table>
            <%end%>
        </div>
    </div>
</div>
  
