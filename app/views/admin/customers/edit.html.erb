<%=@customer.last_name%><%=@customer.first_name%><h2>さんの会員情報編集</h2>

<%=form_with model: @customer,url: admin_customer_path,method: :patch do |f| %>

<table>
    <tr><th>会員ID</th><td><%=@customer.id%></td></tr>
    <tr><th>氏名</th><td><%=f.search_field :last_name%><%=f.search_field :first_name%></td></tr>
    <tr><th>フリガナ</th><td><%=f.search_field :last_name_kana%><%=f.search_field :first_name_kana%></td></tr>
    <tr><th>郵便番号</th><td><%=f.text_field :postal_code%></td></tr>
    <tr><th>住所</th><td><%=f.text_field :address%></td></tr>
    <tr><th>電話番号</th><td><%=f.telephone_field :telephone_number%></td></tr>
    <tr><th>メールアドレス</th><td><%= f.email_field :email%></td></tr>
    <tr><th></th><td><%=f.submit'変更を保存' %></td></tr>
</table>
<%end%>