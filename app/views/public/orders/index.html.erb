<h2>注文履歴一覧</h2>

<table>
    <thead>
        <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
        </tr> 
    </thead>
    <% @orders.each do |order|%>
    <tbody>
        <tr>
            <td><%=order.created_at%></td>
            <td><%=order.postal_code%><br><%=order.address%><br><%=order.name%></td>
                 <%order.items.each do |item|%>
                <td><%=item.name%></td>
                <%end%>
            <td><%=order.billing_amount%></td> 
            <td><%=order.order_status%></td>
            <td><%#=link_to "表示する",order_de%></td>
        </tr>
    </tbody>
    <%end%>
</table>