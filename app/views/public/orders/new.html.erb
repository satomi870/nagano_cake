<%=form_with model: @order,url: orders_confirm_path,method: :post do |f| %> <%#確認画面におくりたいからcreateじゃない%>

    <%=f.radio_button :payment_method,Order.payment_methods.key(0)%>
    
    <%=f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>
    
    <%=f.radio_button :payment_method, Order.payment_methods.key(1)%>
    
    <%=f.label :payment_method,Order.payment_methods_i18n[:transfer] %>
    
    <%=f.radio_button :myaddress,"1"%>
    <%=f.label :myaddress,"ご自身の住所"%>
    <%=current_customer.address%> <%# current_userと同じ　customerモデルに書いてあるカラムだったらaddressの部分を変えればなんでも取ってこれる%>
    
    <%=f.radio_button :select_address,"1"%><%#select_addressと"1"は他とかぶってなければ自分で決めていい%>
    <%=f.label :select_address,"登録済み住所から選択"%>
    <%=f.select:address_id, options_from_collection_for_select(Address.all,:id,:address_disply)%>　<%#idはどっから取ってきてる？%>
    
    <%=f.radio_button :new_address,"2"%>
    <%=f.label :new_address,"新しいお届け先"%>
    <table>
        <tr><th>郵便番号(ハイフンなし)</th><td><%=f.text_field:postal_code%></td></tr>
        <tr><th>住所</th><td><%=f.text_field:address%></td></tr>
        <tr><th>宛名</th><td><%=f.text_field:name%></td></tr>
    </table>
    
    <%=f.submit '確認画面へ進む'%>
<%end%>
