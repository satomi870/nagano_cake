

<table>
    <thead>
        <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
        </tr>
    </thead>
    <tbody>
        <% @cart_items.each do |cart_item| %>
        <tr>
          <td><%=cart_item.item.name%></td> 
          <td><%=cart_item.item.with_tax_price%></td> 
          <td><%=cart_item.amount%></td>
          <td><%=cart_item.item.with_tax_price*cart_item.amount%></td>
          <td><%@sum+=cart_item.item.with_tax_price*cart_item.amount%></td>
        </tr>
        <%end%>
    </tbody>       
  </table>
  
  <table>
      <tr><th><%=@order.postage%></th></tr>
      <tr><th><%=@sum%></th></tr>
      <tr><th><%=@sum+=@order.postage%></th></tr>
  </table>
<%=@order.payment_method_i18n%>  
  
<%=@order.postal_code%>
<%=@order.address%>
<%=@order.name%>

<%=form_with model: @order,url: orders_path,method: :post do |f| %> 
 <%=f.hidden_field :payment_method,:value=>@order.payment_method%> <%#全部valueから後ろいらない%>
 <%=f.hidden_field :postal_code,:value=>@order.postal_code%>
 <%=f.hidden_field :address,:value=>@order.address%>
 <%=f.hidden_field :name,:value=>@order.name%>
 <%=f.hidden_field :postage,:value=>@order.postage%>
 <%=f.hidden_field :billing_amount,:value=>@order.billing_amount%>
 <%= f.hidden_field:order_status%> <%#日本語化の記載する%>
 <%=f.submit '注文を確定する'%>
<%end%>

