<%=image_tag @item.get_image(200,130)%>
    
    <h2><%=@item.name%></h2>
    <p><%=@item.introduction%></p>
    
    <h3>¥<%= @item.add_tax_price.to_s(:delimited)%>(税込)</h3>

<%=form_with model: @cart_item,url: cart_items_path do |f| %>
 <%= f.hidden_field :item_id, :value => @item.id%>
 <%= f.select :amount, *[1..100] %>
 <% if @item.is_active%>
 <%=f.submit'カートに入れる'%>
 <%else%>
 <p>売り切れ</p>
 <%end%>
<%end%> 